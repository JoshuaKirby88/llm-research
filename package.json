{
	"name": "llm-research",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "pnpm cf-typegen && next dev --turbo",
		"lint": "biome check .",
		"start": "next start",
		"studio": "drizzle-kit studio --config=drizzle/config.ts",
		"generate": "drizzle-kit generate --config=drizzle/config.ts",
		"migrate:dev": "wrangler d1 migrations apply llm-research",
		"migrate:prod": "wrangler d1 migrations apply llm-research --remote",
		"drop": "drizzle-kit drop --config=drizzle/config.ts",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
		"check": "tsc && biome check . --write"
	},
	"dependencies": {
		"@clerk/nextjs": "^6.12.8",
		"@clerk/themes": "^2.2.26",
		"@hookform/resolvers": "^4.1.3",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-scroll-area": "^1.2.4",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.3",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-tabs": "^1.1.4",
		"@radix-ui/react-tooltip": "^1.2.0",
		"@t3-oss/env-core": "^0.12.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.41.0",
		"drizzle-zod": "^0.7.1",
		"emblor": "^1.4.8",
		"lucide-react": "^0.483.0",
		"next": "15.2.3",
		"next-themes": "^0.4.6",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.55.0",
		"react-textarea-autosize": "^8.5.8",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.0.2",
		"tw-animate-css": "^1.2.4",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@opennextjs/cloudflare": "^0.6.5",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/pg": "^8.11.11",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"better-sqlite3": "^11.9.1",
		"drizzle-kit": "^0.30.5",
		"tailwindcss": "^4",
		"typescript": "^5",
		"wrangler": "^4.11.0"
	},
	"pnpm": {
		"neverBuiltDependencies": []
	}
}
